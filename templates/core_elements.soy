{namespace annotorious.templates}

/**
 * A dummy element to be used for annotation popups later on.
 */
{template .popup}
<div class="annotorious-popup top-left" style="position:absolute;z-index:1">
  <div class="annotorious-popup-buttons">
    <a class="annotorious-popup-button annotorious-popup-button-edit" title="غلط" href="javascript:void(0);">غلط</a>
    <a class="annotorious-popup-button annotorious-popup-button-delete" title="درست" href="javascript:void(0);">درست</a>
  </div>
  <span class="annotorious-popup-text"></span>
  <div class="annotorious-pop-selected-type"></div>
</div>
{/template}


/**
 * A basic annotation edit text form.
 */
{template .editform}
<div class="annotorious-editor" style="position:absolute;z-index:1">
  <form>
    <textarea class="annotorious-editor-text" placeholder="Add a Comment..." tabindex="1"></textarea>
    <div class="annotorious-type-selector-container"></div>
    <div class="annotorious-editor-button-container">
      <a class="annotorious-editor-button annotorious-editor-button-cancel" href="javascript:void(0);"
       tabindex="3">Cancel</a>
      <a class="annotorious-editor-button annotorious-editor-button-save" href="javascript:void(0);"
       tabindex="2">Save</a>
    </div>
  </form>
</div>
{/template}

/**
* Type Selectors
* @param selectors
*/
{template .typeSelectors}
    {foreach $selector in $selectors}
        <a name="{$selector['ename']}" href="javascript:void(0)" style="color:{$selector['fcolor']};
        border: {$selector['bcolor']}" class="annotorious-type-selector">{$selector['zname']}</a>
    {/foreach}
{/template}


